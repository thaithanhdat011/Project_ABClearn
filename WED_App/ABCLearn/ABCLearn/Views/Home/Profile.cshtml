@using ABCLearn.DataAccess
@{
	ViewBag.title = "ABC Learn";
}
<!DOCTYPE html>
<html lang="en">

<head>
	@Html.Partial("_head")
</head>

<body>
	@Html.Partial("_spanner")
	@Html.Partial("_navStart")
	@if (ViewBag.Role != "Lecturer")
	{
		<a href="@Url.Action("Index", "Home")" class="nav-item nav-link ">Home</a>
		<a href="@Url.Action("About", "Home")" class="nav-item nav-link">About US</a>
		<a href="@Url.Action("Contact", "Home")" class="nav-item nav-link">Contact</a>
	}
	<a href="@Url.Action("Course", "Home")" class="nav-item nav-link">Course</a>
	@Html.Partial("_navEnd")
	<!-- tab search dictionary -->
	<div class="container-fluid bg-primary mb-5 hero-header">
		<div class="container py-1">
			<div class="row justify-content-center" style="margin-top: 100px">
				<div class="col-lg-10 text-center">
					<h1 class="display-3 text-white animated slideInDown">@UserLogin.Instance.FirstName @UserLogin.Instance.LastName</h1>
				</div>
			</div>
		</div>
	</div>
	<!-- Profile in here -->
	@if (ViewBag.Role == "Student")
	{
		@Html.Partial("_profileStudent")
	}else
	{
		@Html.Partial("_profileLecturer")
	}
		<script>
		console.log("@ViewBag.user.Avatar")
		var dobValue = "@ViewBag.user.DOB.ToString("yyyy-MM-dd")";
			document.getElementById("dobInput").value = dobValue;

			function showProfileForm() {
				document.getElementById("ProfileForm").style.display = "none";
				document.getElementById("EditProfileForm").style.display = "block";
			}
			function showEditProfileForm() {
				document.getElementById("ProfileForm").style.display = "block";
				document.getElementById("EditProfileForm").style.display = "none";
			}

		function showProfileFormlt() {
			document.getElementById("ProfileFormlt").style.display = "none";
			document.getElementById("EditProfileFormlt").style.display = "block";
			}
		function showEditProfileFormlt() {
			document.getElementById("ProfileFormlt").style.display = "block";
			document.getElementById("EditProfileFormlt").style.display = "none";
			}
		</script>


	@if (UserLogin.Instance.RoleID != "Lecturer")
	{
			@Html.Partial("_footer")
		}
		@Html.Partial("_endScript")
</body>

</html>